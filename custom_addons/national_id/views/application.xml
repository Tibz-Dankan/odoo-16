<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_national_id_form" model="ir.ui.view">
        <field name="name">national.id.form</field>
        <field name="model">national.id</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="stage" widget="statusbar"/>
                        <field name="progress" widget="progressbar"/>
                        <field name="surname"/>
                        <field name="lastname"/>
                        <field name="gender"/>
                        <field name="age"/>
                        <field name="district"/>
                        <field name="sub_county"/>
                        <field name="parish"/>
                        <field name="village"/>
                    </group>
                    <group>
                         <button name="action_review" string="Review" type="object" class="btn-primary"/>
                         <button name="action_approve" string="Approve" type="object" class="btn-primary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_national_id_tree" model="ir.ui.view">
        <field name="name">national.id.tree</field>
        <field name="model">national.id</field>
        <field name="arch" type="xml">
            <tree>
                <field name="surname"/>
                <field name="lastname"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="district"/>
                <field name="sub_county"/>
                <field name="parish"/>
                <field name="village"/>
                <field name="stage" widget="statusbar"/>
                <field name="progress" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <record id="action_national_id" model="ir.actions.act_window">
        <field name="name">Applicants</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">national.id</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
